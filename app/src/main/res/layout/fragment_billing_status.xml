<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout style="@style/LinearLayout_createjob">

            <TextView
                style="@style/Text_view"
                android:text="Billing code" />

            <TextView
                android:id="@+id/textAssetsName1"
                style="@style/Text_view1"
                android:text="Sorrin Appartments" />

        </LinearLayout>

        <LinearLayout style="@style/LinearLayout_createjob">

            <TextView
                style="@style/Text_view"
                android:text="Activity" />

            <TextView
                android:id="@+id/textAssetsName2"
                style="@style/Text_view1"
                android:text="Mr. John Stark" />

        </LinearLayout>

        <LinearLayout style="@style/LinearLayout_createjob">

            <TextView
                style="@style/Text_view"
                android:text="Client name" />

            <TextView
                android:id="@+id/textResorce"
                style="@style/Text_view1"
                android:text="#INS23467" />

        </LinearLayout>


        <LinearLayout style="@style/LinearLayout_createjob">

            <TextView
                style="@style/Text_view"
                android:text="Work time" />

            <TextView
                android:id="@+id/textOther"
                style="@style/Text_view1"
                android:text="Immediate" />

        </LinearLayout>


        <LinearLayout style="@style/LinearLayout_createjob">

            <TextView
                style="@style/Text_view"
                android:text="Date" />

            <TextView
                style="@style/Text_view1"
                android:text="Lighting Installation" />

        </LinearLayout>

        <LinearLayout style="@style/LinearLayout_createjob">

            <TextView
                style="@style/Text_view"
                android:text="Total" />

            <TextView
                style="@style/Text_view1"
                android:text="Sam Miller" />

        </LinearLayout>


        <LinearLayout style="@style/LinearLayout_createjob">

            <TextView
                style="@style/Text_view"
                android:text="Engineer" />

            <TextView
                android:id="@+id/textTime"
                style="@style/Text_view1"
                android:text="West Berskhire" />

        </LinearLayout>

        <LinearLayout style="@style/LinearLayout_createjob">

            <TextView
                style="@style/Text_view"
                android:text="Status" />

            <TextView
                style="@style/Text_view1"
                android:text="West Berskhire" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>