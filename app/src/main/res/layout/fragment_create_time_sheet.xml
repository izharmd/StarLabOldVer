<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/strendredPromtText"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp"
            android:text="Select Job"
            android:textColor="@color/color_green_bg" />

        <LinearLayout
            style="@style/linerLayout_stnPromt"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp">

            <Spinner
                android:id="@+id/spinnerSelectJob"
                style="@style/SpinnerAsEditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="5.5" />

            <View
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:background="@color/white"></View>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="2dp"
                android:layout_weight=".5"
                android:src="@mipmap/ic_down_arrow" />

        </LinearLayout>

        <TextView
            style="@style/strendredPromtText"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp"
            android:text="Manager"
            android:textColor="@color/color_green_bg" />

        <LinearLayout
            style="@style/linerLayout_stnPromt"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp">


            <EditText
                android:id="@+id/editUserName"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:background="@null"
                android:hint="Robert Mallinson"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@drawable/edittext_cursor_color" />
        </LinearLayout>

        <TextView
            style="@style/strendredPromtText"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp"
            android:text="Select date"
            android:textColor="@color/color_green_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            android:weightSum="5">

            <TextView
                android:id="@+id/textSelectdate1"
                style="@style/Text_view"
                android:layout_weight="2.2"
                android:drawableRight="@android:drawable/ic_menu_my_calendar" />

            <TextView
                style="@style/Text_view"
                android:layout_gravity="center"
                android:layout_weight=".6"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:text="4" />

            <TextView
                style="@style/Text_view"
                android:layout_weight="2.3"

                android:text="Sorrin Aptmnts" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/textSelectdate2"
                style="@style/Text_view"
                android:layout_weight="2.2"
                android:drawableRight="@android:drawable/ic_menu_my_calendar" />

            <TextView
                style="@style/Text_view"
                android:layout_gravity="center"
                android:layout_weight=".6"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:text="2" />

            <TextView
                style="@style/Text_view"
                android:layout_weight="2.3"
                android:gravity="center|left"
                android:text="Sorrin Aptmnts" />

        </LinearLayout>


        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_button"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>


</RelativeLayout>