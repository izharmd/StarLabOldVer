<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--================================================================-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                    <include
                        layout="@layout/steps_button_header"/>

                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:background="@color/notification_bg"
                    android:weightSum="2"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:paddingLeft="10dp"
                        android:text="Service details"
                        android:gravity="center|left"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>


                <LinearLayout
                    style="@style/ll_Steps"
                    android:layout_marginTop="15dp">
                    <TextView
                        style="@style/Text_view_Steps"
                        android:text="Week Commencing:"
                        android:singleLine="true"/>

                    <TextView
                        style="@style/Text_view_Steps1"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_Steps">
                    <TextView
                        style="@style/Text_view_Steps"
                        android:text="Service Level:"/>

                    <TextView
                        style="@style/Text_view_Steps1"/>
                </LinearLayout>




















                <LinearLayout
                    style="@style/ll_Steps">
                    <TextView
                        style="@style/Text_view_Steps"
                        android:text="External clean"
                        android:layout_weight="2"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yes"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="no"/>
                </LinearLayout>



                <TextView
                    style="@style/Text_view_Steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please specify any special requirements for the clinic"/>

                <TextView
                    style="@style/Text_view_Steps1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"/>


                <TextView
                    style="@style/Text_view_Steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule available?"
                    android:layout_marginTop="10dp"/>

                <TextView
                    style="@style/Text_view_Steps1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>
        </ScrollView>




    </LinearLayout>


</RelativeLayout>